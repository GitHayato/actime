<% if user_signed_in? %>
  <%= render "shared/second_header.html.erb" %>

  <div class="title">
    <h1>Welcome to Ac<span class="t">T</span>ime!</h1>
  </div>

  <div class="search-users">
    <%= form_with url: search_users_path, local: true, method: :get, class: "search-form" do |form| %>
      <%= form.text_field :keyword, placeholder: "ユーザーを検索する", class: "search-input" %>
      <%= form.submit "検索", class: "search-btn" %>
    <% end %>
    <h3 class="search-flash"><%= flash[:search] %></h3>
  </div>

  <div class="two-square">
      <%= link_to("スレッドを作成", new_room_path, class: "text") %>
      <%= link_to("スレッドを選ぶ", rooms_path, class: "text") %>
  </div>
<% else %>
  <%= render "shared/header.html.erb" %>
  
<% end %>

<%= render "shared/footer.html.erb" %>