<%= render "shared/header.html.erb" %>
<div class="sign-in">
  <div class="user-session">
    <h2>ログイン</h2>

    <%= form_with model: @user, url: user_session_path(@user), local: true do |f| %>
      <div class="field">
        <%= f.label :email, "メールアドレス", class: "label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "enter" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード", class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "enter" %>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: "button" %>
      </div>
    <% end %>
  </div>

  <div class="jump-to-registration-path">
    アカウントを<%= link_to "登録する", new_user_registration_path, class: "jump-registration" %>
  </div>

</div>

<%= render "shared/footer.html.erb" %>