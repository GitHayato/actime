<%= render "shared/header.html.erb" %>

<div class="sign-up">
  <div class="user-registration">
    <h2>新規登録</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
          <%= f.label :username, "ユーザー名", class: "label" %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "enter" %>
      </div>

      <div class="field">
          <%= f.label :email, "メールアドレス", class: "label "%>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "enter" %>
      </div>

      <div class="field">
          <%= f.label :password, "パスワード", class: "label" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上の半角英数字", class: "enter" %>
      </div>

      <div class="field">
          <%= f.label :password_confirmation, "パスワード(確認用)", class: "label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "同じパスワードを入力してください", class: "enter" %>
      </div>

      <div class="actions">
        <%= f.submit "登録", class: "button" %>
      </div>
    <% end %>
  </div>
</div>

<%= render "shared/footer.html.erb" %>