<div class="create-threads">
  <%= image_tag "plus.png", alt: "スレッドを作成する", class: "create-img" %>
  <%= link_to "スレッドを作成する", rooms_path, method: :post, class: "create-button" %>
</div>
<div class="index-threads">
  <div class="threads-flex">
    <%= image_tag "toggle.png", alt: "スレッド一覧", class: "create-img" %>
    <p class="show-threads">スレッド一覧</p>
  </div>
  <% @rooms.each do |room| %>
    <ul>
      <li><a href="/rooms/<%=room.id%>/messages" class="thread-name"><%= room.thread_name %></a></li>
    </ul>
  <% end %>
  
</div>