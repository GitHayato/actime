<div class="create-threads">
  <%= image_tag "plus.png", alt: "スレッドを作成する", class: "create-img" %>
  <%= link_to "スレッドを作成する", new_room_path, class: "create-button" %>
</div>
<div class="measure-time">
  <%= image_tag "stopwatch.png", alt: "タイムを測る", class: "stopwatch-img" %>
  <%= link_to "タイムを測る", new_room_watch_path(@room.public_uid), class: "measure-button" %>
</div>
<div class="index-threads">
  <div class="threads-flex">
    <%= image_tag "toggle.png", alt: "スレッド一覧", class: "create-img" %>
    <p class="show-threads">スレッド一覧</p>
  </div>
  <% @rooms.each do |room| %>
    <ul>
      <li><a href="/rooms/<%=room.public_uid%>/messages" class="thread-name"><%= room.thread_name %></a></li>
    </ul>
  <% end %>
  
</div>